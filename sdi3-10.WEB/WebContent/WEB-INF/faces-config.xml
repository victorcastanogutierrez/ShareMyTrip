<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
	version="2.2">
	<managed-bean>
		<managed-bean-name>trip</managed-bean-name>
		<managed-bean-class>com.sdi.presentation.BeanTrip</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>tripController</managed-bean-name>
		<managed-bean-class>com.sdi.presentation.BeanTrips</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>seats</managed-bean-name>
		<managed-bean-class>com.sdi.presentation.BeanSeats</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>login</managed-bean-name>
		<managed-bean-class>com.sdi.presentation.BeanLogin</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>settings</managed-bean-name>
		<managed-bean-class>com.sdi.presentation.BeanSettings</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>user</managed-bean-name>
		<managed-bean-class>com.sdi.presentation.BeanUser</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>tripAdmin</managed-bean-name>
		<managed-bean-class>com.sdi.presentation.BeanTripAdmin</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>tripFilter</managed-bean-name>
		<managed-bean-class>com.sdi.presentation.filter.TripsFilters</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>mantenimiento</managed-bean-name>
		<managed-bean-class>com.sdi.presentation.BeanMantenimiento</managed-bean-class>
		<managed-bean-scope>application</managed-bean-scope>
	</managed-bean>

	<application>
		<resource-bundle>
			<base-name>messages</base-name>
			<var>msgs</var>
		</resource-bundle>
	</application>

	<!-- Poder cerrar sesiÃ³n -->
	<navigation-rule>
		<from-view-id>/private/*</from-view-id>
		<navigation-case>
			<from-action>#{settings.logout}</from-action>
			<from-outcome>cierreSesion</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<!-- Desde el index (login) -->
	<navigation-rule>
		<from-view-id>/index.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>registro</from-outcome>
			<to-view-id>/registerForm.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{tripController.listado}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/listado.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{login.verify}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/private/listadoPendientes.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<!-- Desde el registro -->
	<navigation-rule>
		<from-view-id>/registerForm.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>registro</from-outcome>
			<to-view-id>/registerForm.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>login</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{tripController.listado}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/listado.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<!-- Desde listado -->
	<navigation-rule>
		<from-view-id>/listado.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>registro</from-outcome>
			<to-view-id>/registerForm.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>login</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<!-- Paginas registrado -->
	<navigation-rule>
		<from-view-id>/private/*</from-view-id>
		<navigation-case>
			<from-action>#{tripController.listado}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/private/listado.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>nuevoViaje</from-outcome>
			<to-view-id>/private/altaTripForm.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{trip.salva}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/private/listadoPendientes.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{trip.salva}</from-action>
			<from-outcome>error</from-outcome>
			<to-view-id>/private/altaTripForm.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{seats.listadoPasajeros}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/private/dataTrip.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{login.cargarViajesRelaccionados}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/private/listadoPendientes.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{tripAdmin.listadoUsuarios}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/private/adminViaje.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{tripAdmin.aceptarPasajero}</from-action>
			<to-view-id>/private/adminViaje.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{tripAdmin.excluirPasajero}</from-action>
			<to-view-id>/private/adminViaje.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>editarViaje</from-outcome>
			<to-view-id>/private/editarViaje.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

</faces-config>
